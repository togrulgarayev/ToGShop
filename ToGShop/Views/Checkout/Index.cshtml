@using Microsoft.Extensions.Options
@inject IOptions<ToGShop.Data.StripeSettings> Stripe
@model Business.ViewModels.CheckoutViewModel.CheckoutViewModel
@{
    ViewData["Title"] = "Ödəniş";
}



<section class="side-navbar">
    <div id="mySidenav" class="sidenav">

        @foreach (var category in @Model.Categories)
        {

            <a class="category-title" asp-controller="Categories" asp-action="Index"><i class="bi bi-record-circle"></i> <p>@category.Name</p> </a>
        }


    </div>
</section>


<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:400,400i,700,900&display=swap" rel="stylesheet">
</head>
<style>

    .checkout-succes-h1 {
        color: #88B04B;
        font-family: "Nunito Sans", "Helvetica Neue", sans-serif;
        font-weight: 900;
        font-size: 40px;
        margin-bottom: 10px;
    }

    .checkout-succes-p {
        color: #404F5E;
        font-family: "Nunito Sans", "Helvetica Neue", sans-serif;
        font-size: 20px;
        margin: 0;
    }

    .checkout-succes-i {
        color: #9ABC66;
        font-size: 100px;
        line-height: 200px;
        margin-left: -15px;
    }

    .checkout-succes-card {
        background: white;
        padding: 60px;
        border-radius: 4px;
        box-shadow: 0 2px 3px #C8D0D8;
        display: inline-block;
        margin: 0 auto;
    }
</style>
<body>

    <div style="display: flex; justify-items: center; justify-content: center; text-align: center; align-items: center; align-content: center;">

        <div class="card checkout-succes-card">



            <form asp-controller="Checkout" asp-action="Processing" method="post">
                <article>
                    <label>Məbləğ: @ViewBag.DollarAmount ₼</label>
                </article>

                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="@Stripe.Value.PublishableKey"
                        data-amount="@ViewBag.Total"
                        data-name="ToG Shopping"
                        data-description="Online ödəniş portalı"
                        data-image="https://cdn-icons-png.flaticon.com/512/2433/2433545.png"
                        data-locale="en"
                        data-zip-code="false">

                </script>

            </form>


        </div>
    </div>

</body>
</html>