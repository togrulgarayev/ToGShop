@model IEnumerable<Category>
@{
    ViewData["Title"] = "Kateqoriyalar";
    int count = 1;
}


<!-- Begin Page Content -->
<div class="container-fluid">
    
    

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Kateqoriyalar</h1>
    <p class="mb-4 d-flex justify-content-end">
        <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Əlavə et</a>
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            
            
            <div class="input-group">
                
                <form method="get" asp-action="Index">
                    <div class="form-outline">
                        <input autocomplete="off" type="search" placeholder="Kateqoriyalarda axtar..." value="@ViewData["SearchedCategory"]" name="categorySearch" class="form-control"/> <a style="padding-left: 15px" asp-action="Index">Bütün kateqoriyalar</a>
                        
                        
                    </div>
                
                </form>
            </div>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad</th>
                            <th>Tarix</th>
                            <th>Əməliyyatlar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@item.CreateDT</td>
                                <td>
                                    <a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    <a class="btn btn-primary" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                                </td>
                            </tr>

                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<!-- End of Main Content -->
