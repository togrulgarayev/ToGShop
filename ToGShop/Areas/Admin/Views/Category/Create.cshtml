@model CategoryCreateViewModel

@{
    ViewData["Title"] = "Kateqoriya Yarat";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kateqoriya əlavə et</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <form method="post" asp-controller="Category" asp-action="Create">

                <div class="form-group">
                    <label asp-for="Name">Kateqoriyanin adı:</label>
                    <input class="form-control" asp-for="Name" placeholder="Məhsulun adını daxil edin...">
                    <span asp-validation-for="Name"></span>
                </div>

                <button type="submit" class="btn btn-primary">Yarat</button>
            </form>
        </div>
    </div>
</div>


