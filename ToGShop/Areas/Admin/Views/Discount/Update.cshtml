@model Business.ViewModels.DiscountTimerViewModel.DiscountTimerViewModel

@{
    ViewData["Title"] = "Endirim Yenilə";
}



<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Endirim Yenilə</h1>
                                </div>
                                <form class="user" method="post" asp-controller="Discount" asp-action="Update" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <input asp-for="DiscountTitle" value="@Model.DiscountTitle" autocomplete="off" class="form-control form-control-user text-center" style="font-size: 15px;"
                                               placeholder="Kateqoriyanın adı">
                                        <span class="text-danger" asp-validation-for="DiscountTitle"></span>
                                    </div>

                                    <div class="form-group">
                                        <input asp-for="DiscountTime" value="@Model.DiscountTime" class="form-control  text-center" style="font-size: 15px;"
                                               placeholder="Kateqoriyanın adı">
                                        <span class="text-danger" asp-validation-for="DiscountTime"></span>
                                    </div>

                                    <button style="font-weight: bold; text-transform: uppercase;" type="submit" class="btn btn-primary btn-user btn-block">
                                        Yenilə
                                    </button>
                                    <hr>
                                </form>
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

