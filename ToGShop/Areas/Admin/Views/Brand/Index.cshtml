@model IEnumerable<Brand>
@{
    ViewData["Title"] = "Brendlər";
    int count = 1;
}


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Brendlər</h1>
    <p class="mb-4 d-flex justify-content-end">
        <a class="btn btn-primary" asp-controller="Brand" asp-action="Create">Əlavə et</a>
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="input-group">

                <form method="get" asp-action="Index">
                    <div class="form-outline">
                        <input type="search" placeholder="Brendlərdə axtar..." value="@ViewData["SearchedBrend"]" name="brendSearch" class="form-control" /> <a style="padding-left: 15px" asp-action="Index">Bütün brendlər</a>


                    </div>

                </form>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Logo</th>
                            <th>Ad</th>
                            <th>Tarix</th>
                            <th>Əməliyyatlar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@count</td>
                            <td> <img width="150" src="~/assets/img/@item.Logo"/> </td>
                            <td>@item.Name</td>
                            <td>@item.CreateDT</td>
                            <td>
                                <a asp-controller="Brand" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                <a asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                            </td>
                        </tr>

                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<!-- End of Main Content -->
