@model IEnumerable<ContactAdmin>
@{
    ViewData["Title"] = "Mesajlar";
    int count = 1;
}


<!-- Begin Page Content -->
<div class="container-fluid">



    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Mesajlar</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">



        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Istifadəçi adı</th>
                            <th>Email</th>
                            <th>Mesaj</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@count</td>
                            <td>@item.Fullname</td>
                            <td>@item.Username</td>
                            <td> <a href="mailto:@item.Email">@item.Email</a> </td>
                            <td>@item.Message</td>
                            <td>
                                <a asp-controller="ContactAdmin" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                            </td>
                        </tr>

                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<!-- End of Main Content -->
